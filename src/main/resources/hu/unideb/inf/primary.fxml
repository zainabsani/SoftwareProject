<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="40.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.PrimaryController">
   <Label fx:id="title" alignment="CENTER" textFill="cadetblue" text="Tic Tac Toe Game" />
   <HBox alignment="CENTER">
      <children>
      <Label fx:id="play1" text="Player 1:" />
      <TextField fx:id="player1" minWidth="200"/>
   </children>
   </HBox>
   <HBox alignment="CENTER">
   <children>
      <Label fx:id="play2" text="Player 2:" />
      <TextField fx:id="player2" minWidth="200"/>
   </children>
   </HBox>

   <HBox alignment="BOTTOM_CENTER">
      <children>
      <Button fx:id="primaryButton" text="Start Game" onAction="#switchToSecondary"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   </HBox>
</VBox>



